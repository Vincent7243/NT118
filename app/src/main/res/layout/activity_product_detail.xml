<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        tools:context=".ProductDetailActivity">

        <ImageView
            android:id="@+id/iv_productDetail_imageProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_detailProduct_brand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_detailProduct_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detailProduct_rate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="No ratings yet" />

        <TextView
            android:id="@+id/tv_detailProduct_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#E62727"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv1234"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Description: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detailProduct_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:inputType="text|textMultiLine"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="20">

            <Button
                android:id="@+id/favorite_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:backgroundTint="#00FFFFFF"
                android:onClick="toggleFavorite"
                android:text="Favorite"
                android:textColor="@color/home"
                android:textSize="13sp"
                app:icon="@drawable/ic_love"
                app:iconSize="30dp"
                app:iconTint="@color/home" />

            <Button
                android:id="@+id/favorite_buttonn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:backgroundTint="#00FFFBFB"
                android:onClick="toggleFavorite"
                android:text="Add to cart"
                android:textColor="@color/home"
                android:textSize="13sp"
                app:icon="@drawable/ic_cart"
                app:iconSize="30dp"
                app:iconTint="@color/home" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Buy now"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_detailProduct_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_back_admin" />

</FrameLayout>